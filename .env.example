# Environment Configuration for Multi-App Hosting
# Copy this to .env and customize for your deployment

# =============================================================================
# BASIC CONFIGURATION (Legacy - still supported)
# =============================================================================
SECRET_KEY=your-super-secret-key-here-change-me
DATABASE_URL=sqlite:///./daemon.db
BACKUP_DIR=./backups

# =============================================================================
# SERVER CONFIGURATION (Multi-App Ready)
# =============================================================================
# API Server
HOST=0.0.0.0
PORT=8004

# Frontend server port (only used in dual-server mode)
FRONTEND_PORT=8005

# =============================================================================
# MULTI-APP HOSTING CONFIGURATION
# =============================================================================
# Deployment mode: development, production, multi-app
DEPLOYMENT_MODE=development

# API URL for frontend (auto-detect if not set)
# DAEMON_API_URL=http://localhost:8004
# DAEMON_API_URL=https://yourdomain.com/daemon/api
# DAEMON_API_URL=https://api.daemon.yourdomain.com

# Frontend server port (only used in dual-server mode)
FRONTEND_PORT=8005

# External domain for CORS and API generation
# EXTERNAL_DOMAIN=yourdomain.com

# Base paths for reverse proxy routing
# API_BASE_PATH=/daemon/api
# FRONTEND_BASE_PATH=/daemon

# =============================================================================
# SECURITY & PERFORMANCE
# =============================================================================
DEBUG=false
RELOAD=false
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8005", "https://yourdomain.com"]
ALLOWED_IPS=[]

# =============================================================================
# FEATURES
# =============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
METRICS_ENABLED=true
LOGGING_LEVEL=INFO

# MCP (Model Context Protocol) Support
MCP_ENABLED=true
MCP_TOOLS_PREFIX=daemon_

# API Configuration
API_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json
